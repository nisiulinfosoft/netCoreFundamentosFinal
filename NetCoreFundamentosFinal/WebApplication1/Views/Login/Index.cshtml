@model NetCoreFundamentosFinal.DTO.Usuario

@{
    ViewData["Title"] = "Index";
}

<h4>Ingrese credenciales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label class="control-label">Usuario</label>
                <input asp-for="Login" class="form-control" placeholder="Introducir usuario" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contraseña</label>
                <input type="password" asp-for="Clave" class="form-control" placeholder="Introducir contraseña" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-group has-feedback">
                    @Html.ValidationSummary(false, "Se encontro errores")
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>